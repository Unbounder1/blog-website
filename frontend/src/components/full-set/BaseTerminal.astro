<style>
    /* styles.css */
body {
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #403c52, #1d2025);
  font-family: 'Courier New', Courier, monospace;
  color: #dcdcdc;
}

.terminal {
  width: 600px;
  background: #1e1e1e;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.tabs {
  display: flex;
  background: #2a2a2a;
  padding: 8px;
}

.tab {
  padding: 8px 12px;
  color: #888;
  background: #2a2a2a;
  margin-right: 4px;
  border-radius: 4px;
  cursor: pointer;
  user-select: none;
}

.tab.active {
  color: #ffffff;
  background: #3d3d3d;
}

.tab.add-tab {
  background: #3d3d3d;
  font-weight: bold;
}

.terminal-body {
  padding: 16px;
  background: url('https://via.placeholder.com/600x300') no-repeat center;
  background-size: cover;
  height: 300px;
  display: flex;
  align-items: end;
}

.prompt {
  font-size: 16px;
  color: #dcdcdc;
  justify-content: bottom;
}

.command {
  color: #79c0ff;
}
</style>