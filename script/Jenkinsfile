pipeline {
    agent {
        kubernetes {
            label 'astro-blog-dep'
            yaml """
apiVersion: v1
kind: Pod
metadata:
  name: astro-blog-dep
spec:
  containers:
  - name: registry
    image: registry:2
    ports:
      - containerPort: 5000
    tty: true
    securityContext:
      runAsUser: 0
    stdin: true
    command:
    - sleep
    args:
    - infinity
    volumeMounts:
      - name: github-repo-volume
        mountPath: /workspace/github-repo

- name: docker
  image: docker:20.10-dind
  tty: true
  securityContext:
    privileged: true  # Required for Docker-in-Docker to run properly
    runAsUser: 0
  stdin: true
  env:
    - name: DOCKER_TLS_CERTDIR
      value: ""  # Disables TLS for DinD (useful for local testing)
  command:
    - dockerd
  args:
    - --host=unix:///var/run/docker.sock
    - --host=tcp://0.0.0.0:2375
  volumeMounts:
    - name: github-repo-volume
      mountPath: /workspace/github-repo
    - name: docker-socket
      mountPath: /var/run/docker.sock

  - name: kubectl
    image: docker.io/bitnami/kubectl:latest
    tty: true
    securityContext:
      runAsUser: 0
    stdin: true
    command:
    - sleep
    args:
    - infinity
    volumeMounts:
      - name: github-repo-volume
        mountPath: /workspace/github-repo

  - name: network-test
    image: docker.io/nicolaka/netshoot:latest
    tty: true
    securityContext:
      runAsUser: 0
    stdin: true
    command:
    - sleep
    args:
    - infinity

  volumes:
  - name: github-repo-volume
    emptyDir: {}
  - name: docker-socket
    emptyDir: {}

  imagePullSecrets:
  - name: docker-credentials
"""
        }
    }

    environment {
        GITHUB_REPO = "https://github.com/Unbounder1/blog-website.git"
        CLONE_DIR = "/workspace/github-repo"
        REGISTRY_URL = "localhost:5000"
    }

    stages {

        stage('Install Git & bash (if needed)') {
            steps {
                container('kubectl') {
                    script {
                        sh """
                          echo 'Checking if git is installed...'
                          if ! command -v git &> /dev/null
                          then
                            echo 'Installing git...'
                            apt-get update && apt-get install -y git
                          else
                            echo 'Git is already installed.'
                          fi
                        """
                    }
                }
            }
        }

        stage('Clone GitHub Repository') {
            steps {
                container('kubectl') {
                    script {
                        sh """
                            echo "Cloning GitHub repository..."
                            if [ ! -d "${CLONE_DIR}" ]; then
                                mkdir -p ${CLONE_DIR}
                            fi
                            git clone ${GITHUB_REPO} ${CLONE_DIR}
                            chmod +x ${CLONE_DIR}/script/resources/docker-build.sh
                            ls -l /workspace/github-repo/script/resources/docker-build.sh
                        """
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                container('docker') {
                    script {
                        sh """
                            echo "Building Docker image(s)..."
                            ls -l /workspace/github-repo/script/resources/docker-build.sh
                            sh ${CLONE_DIR}/script/resources/docker-build.sh ${REGISTRY_URL} all
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                container('kubectl') {
                    script {
                        try {
                            withKubeConfig([credentialsId: 'k8s-token', serverUrl: 'https://kubernetes.default.svc']) {
                                sh """
                                    echo "Current Kubernetes Context:"
                                    kubectl config current-context

                                    echo "Getting all resources in blog-dev namespace:"
                                    kubectl get all -n blog-dev

                                    echo "Applying Kubernetes manifests..."
                                    # Assuming your deployment YAMLs are in dev-deployment folder
                                    kubectl apply -f ${CLONE_DIR}/dev-deployment -n blog-dev
                                """
                            }
                        } catch (Exception e) {
                            echo "Error during deployment: ${e.message}"
                            currentBuild.result = 'FAILURE'
                        }
                    }
                }
            }
        }

        stage('Testing Connectivity') {
            steps {
                container('network-test') {
                    script {
                        try {
                            withKubeConfig([credentialsId: 'k8s-token', serverUrl: 'https://kubernetes.default.svc']) {
                                sh """
                                    echo "Testing connectivity to frontend service..."
                                    curl -v http://frontend-dev-svc.blog-dev.svc.cluster.local:4321
                                """
                            }
                        } catch (Exception e) {
                            echo "Connectivity test failed: ${e.message}"
                            currentBuild.result = 'FAILURE'
                        }
                    }
                }
            }
        }
    }
}